<div class="container-fluid user_authentication">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label(:email) %><br />
      <%= f.email_field(:email, autofocus: true, placeholder: "Enter Email") %>
    </div>

    <div class="field">
      <%= f.label(:password) %>
      <br />
      <%= f.password_field(:password, autocomplete: "off", placeholder: "Enter Password") %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum, must include at least one lowercase letter, one uppercase letter, and one digit)</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label(:password_confirmation) %><br />
      <%= f.password_field(:password_confirmation, autocomplete: "off", placeholder: "Confirm Password") %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
  <p id="loginhelp"><%= render "devise/shared/links" %></p>

</div><!-- /container-fluid -->
