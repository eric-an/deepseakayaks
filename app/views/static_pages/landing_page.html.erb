<div id="carousel-kayaks" class="carousel slide" data-ride="carousel" data-interval="4000">

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
  	<% @products.each do |product| %>
  	<div class="item <%= "active" if product == @products.first %>">
  		<%= link_to(image_tag(product.image_url), product) %>
  		<div class="carousel-caption">
  		  <h5>Click on the picture for more details</h5>
        <%= product.name %>
  		</div><!-- /carousel-caption -->
  	</div><!-- /item -->
  	<% end %> 	
  </div><!-- /carousel-inner -->

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-kayaks" role="button" data-slide="prev">
  	<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
  	<span class="sr-only">Previous</span>
  </a><!-- /left carousel-control -->

  <a class="right carousel-control" href="#carousel-kayaks" role="button" data-slide="next">
  	<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
  	<span class="sr-only">Previous</span>
  </a><!-- /right carousel-control -->
</div><!-- /carousel-example-generic -->