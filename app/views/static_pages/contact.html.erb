<div class="container-fluid" id="contact_form">
	<h1>Contact Us</h1>

	<% flash[:notice] %>

	<%= form_tag("/static_pages/thank_you", remote: true, id: 'new_message') do %>
		<div class="row">
			<div class="col-md-4 col-md-offset-1">
				<div class="form-group">
					<%= label_tag :name, "Name" %>
					<%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
				</div><!-- /form-group -->
				<div class="form-group">
				  <%= label_tag :email, "Email Address" %>
				  <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", :required => true %>
				</div><!-- /form-group -->
				<div class="form-group">
					<%= label_tag :message, "Message" %>
					<%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message", :required => true %>
				</div><!-- /form-group -->
				<%= submit_tag "Send" %>
	<% end %>
			</div><!-- /col-md-4 -->
			<div class="col-md-4">
			<%= image_tag("kayak_top.png", :id => "contact_image") %>
			</div><!-- /col-md-4 -->
		</div><!-- /row -->

</div><!-- /container-fluid -->