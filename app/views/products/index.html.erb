<p id="notice"><%= notice %></p>


  <h1>Listing Products</h1>

  <div class ="container-fluid">
    <div class="row">
      <div class="col-xs-2 col-s-4 col-md-2">Name</div>
      <div class="truncate_desc col-xs-2 col-s-4 col-md-2">Description</div>
      <div class="truncate_url col-xs-2 col-s-4 col-md-5">Image URL</div>
      <div class="col-xs-2 col-s-4 col-md-1">Colour</div>
      <div class="col-xs-2 col-s-4 col-md-1">Price</div>
    </div><!-- /row -->

    <% @products.each do |product| %>
      <div class="row">
        <div class="col-xs-2 col-s-4 col-md-2"><%= product.name %></div>
        <div class="col-xs-2 col-s-4 col-md-2"><%= product.description %></div>
        <div class="truncate_url col-xs-2 col-s-4 col-md-5"><%= product.image_url %></div>
        <div class="col-xs-2 col-s-4 col-md-1"><%= product.colour %></div>
        <div class="col-xs-2 col-s-4 col-md-1"><%= product.price %></div>
        <div class="col-xs-2 col-s-4 col-md-1"><%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div><!-- /row -->
    <% end %>
  </div> <!-- /container-fluid -->

<br>

